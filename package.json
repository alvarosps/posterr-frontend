{
    "name": "base-reactjs",
    "version": "1.0.0",
    "description": "This is a base project template for a React application, with the latest versions of React, Webpack, Babel, ESLint, and Prettier.",
    "main": "index.js",
    "scripts": {
        "start": "webpack serve --config config/webpack.dev.js",
        "build": "webpack --config config/webpack.prod.js",
        "test": "jest",
        "lint": "eslint . --ext .js,.jsx",
        "lint:fix": "eslint . --ext .js,.jsx --fix",
        "prettier": "prettier --check 'src/**/*.{js,jsx,json,css,scss}'",
        "prettier:fix": "prettier --write 'src/**/*.{js,jsx,json,css,scss}'"
    },
    "keywords": [],
    "author": "Alvaro S. P. Silva @alvarosps",
    "license": "ISC",
