        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-react": "^7.32.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "html-webpack-plugin": "^5.5.0",
        "jest": "^29.5.0",
        "prettier": "^2.8.4",
        "sass": "^1.59.3",
        "sass-loader": "^13.2.0",
        "webpack": "^5.76.2",
        "webpack-cli": "^5.0.1",
        "webpack-dev-server": "^4.12.0",
        "webpack-merge": "^5.8.0"
